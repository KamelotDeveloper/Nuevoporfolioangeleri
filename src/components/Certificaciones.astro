<section id="certificaciones" class="py-10">
  <div class="flex items-end justify-between gap-6 flex-wrap">
    <div>
      <h2 class="text-3xl font-extrabold text-gray-900">Certificaciones</h2>
      <p class="mt-2 text-gray-600">Links directos a los PDF (verificables) para validar formación y fechas.</p>
    </div>
    <a href="#contacto" class="focus-ring text-sm font-semibold text-blue-600 hover:text-blue-700">¿Te interesa que automatice un proceso? →</a>
  </div>

  <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
    {certs.map((c) => (
      <article class="rounded-2xl border border-gray-200 bg-white p-5 shadow-sm hover:shadow-md transition-shadow">
        <h3 class="text-base font-bold text-gray-900 leading-snug">
          <a href={c.href} target="_blank" rel="noopener noreferrer" class="focus-ring hover:underline">
            {c.title} (PDF)
          </a>
        </h3>
        <p class="mt-2 text-sm text-gray-600">{c.subtitle}</p>
        <p class="mt-3 text-xs text-gray-500">{c.date}</p>
        <div class="mt-4">
          <a href={c.href} target="_blank" rel="noopener noreferrer" class="focus-ring inline-flex items-center justify-center px-4 py-2 rounded-md bg-gray-900 text-white text-sm font-semibold hover:bg-black">
            Abrir PDF
          </a>
        </div>
      </article>
    ))}
  </div>
</section>
